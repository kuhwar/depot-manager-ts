<div class="flex flex-col justify-stretch gap-6">
  <div class="flex items-center">
    <div class="text-lg ">Manifests</div>
    <form method="post" action="" class="ms-auto flex items-center gap-2" enctype="multipart/form-data">
      <div class="w-32 flex-none">
        {{> inputs/number name="cost" label="Cost" sign="$" required=true }}
      </div>
      <div class="w-40 flex-none  self-stretch ">
        {{> inputs/file name="manifest" label="Manifest File" required=true }}
      </div>
      <div class="w-32 flex-none">
        {{> inputs/submit label="Upload"}}
      </div>
    </form>
  </div>
  <table class="w-full rounded-lg overflow-hidden">
    <thead>
      <tr class="bg:gray-200 dark:bg-gray-800 text-center font-bold">
        <th class="py-2">Id</th>
        <th>File</th>
        <th>Value</th>
      </tr>
    </thead>
    <tbody>
    {{#each manifests}}
      <tr>
        <td class="bg:gray-300 dark:bg-gray-700 px-3 py-2 overflow-ellipsis text-nowrap overflow-hidden">{{this.id}}</td>
        <td class="bg:gray-300 dark:bg-gray-700 px-3 py-2 overflow-ellipsis text-nowrap overflow-hidden">{{this.fileName}}</td>
        <td class="bg:gray-300 dark:bg-gray-700 px-3 py-2 overflow-ellipsis text-nowrap overflow-hidden">{{currency this.totalValue 2}}</td>
      </tr>
    {{/each}}

    </tbody>
    <tfoot></tfoot>
  </table>
</div>
