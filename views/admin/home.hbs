<div class="grid gap-3 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
  <div class="col-span-full flex flex-col justify-stretch gap-6">
    <div class="flex items-center justify-stretch gap-4">
      <h2 class="text-lg font-medium text-gray-800 dark:text-white">Home</h2>
      <span class="px-3 py-1 text-xs text-blue-600 bg-blue-100 rounded-full dark:bg-gray-800 dark:text-blue-400">240 vendors</span>

      <button
        class="flex items-center justify-center px-5 py-2 ms-auto text-sm tracking-wide text-white transition-colors duration-200 bg-blue-500 rounded-lg shrink-0 w-auto gap-x-2 hover:bg-blue-600 dark:hover:bg-blue-500 dark:bg-blue-600">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v6m3-3H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <span>Add Product</span>
      </button>
    </div>
  </div>
  <div class="grid grid-cols-3 rounded-lg overflow-hidden col-span-full" style="grid-template-columns: 1fr 6rem 8rem">
    <div class="bg:gray-200 dark:bg-gray-800 px-3 py-2 text-center font-bold">Product</div>
    <div class="bg:gray-200 dark:bg-gray-800 px-3 py-2 text-center font-bold">Price</div>
    <div class="bg:gray-200 dark:bg-gray-800 px-3 py-2 text-center font-bold">Time</div>

    <form class="grid grid-cols-subgrid col-span-3">
      <input type="hidden" name="itemId"/>
      <div class="bg:gray-300 dark:bg-gray-700 px-1 py-1 overflow-ellipsis text-nowrap overflow-hidden">
        {{>inputs/text label="Product"}}
      </div>
      <div class="bg:gray-300 dark:bg-gray-700 px-1 py-1 text-right">
        {{>inputs/number label="Price" required=true sign="$"}}
      </div>
      <div class="bg:gray-300 dark:bg-gray-700 p-1">{{>inputs/submit label="Sell"}}</div>
    </form>
    <div class="bg:gray-300 dark:bg-gray-700 px-3 py-2 overflow-ellipsis text-nowrap overflow-hidden">Better Homes and Garden Book Shelf</div>
    <div class="bg:gray-300 dark:bg-gray-700 px-3 py-2 text-right">$ 1,380</div>
    <div class="bg:gray-300 dark:bg-gray-700 px-3 py-2">Just now</div>
    <div class="bg:gray-300 dark:bg-gray-700 px-3 py-2 overflow-ellipsis text-nowrap overflow-hidden">Better Homes and Garden Book Shelf</div>
    <div class="bg:gray-300 dark:bg-gray-700 px-3 py-2 text-right">$ 380</div>
    <div class="bg:gray-300 dark:bg-gray-700 px-3 py-2">1 hr ago</div>
    <div class="bg:gray-300 dark:bg-gray-700 px-3 py-2 overflow-ellipsis text-nowrap overflow-hidden">Better Homes and Garden Book Shelf</div>
    <div class="bg:gray-300 dark:bg-gray-700 px-3 py-2 text-right">$ 10</div>
    <div class="bg:gray-300 dark:bg-gray-700 px-3 py-2">2 hrs ago</div>
    <div class="bg:gray-300 dark:bg-gray-700 px-3 py-2 overflow-ellipsis text-nowrap overflow-hidden">Better Homes and Garden Book Shelf</div>
    <div class="bg:gray-300 dark:bg-gray-700 px-3 py-2 text-right">$ 30</div>
    <div class="bg:gray-300 dark:bg-gray-700 px-3 py-2">This morning</div>
    <div class="bg:gray-300 dark:bg-gray-700 px-3 py-2 overflow-ellipsis text-nowrap overflow-hidden">Better Homes and Garden Book Shelf</div>
    <div class="bg:gray-300 dark:bg-gray-700 px-3 py-2 text-right">$ 80</div>
    <div class="bg:gray-300 dark:bg-gray-700 px-3 py-2">Yesterday</div>
  </div>
  {{>charts/bar-stack graphData=postPerformanceGraphData}}
  {{>charts/big-number graphData=stockCountGraphData}}
</div>
