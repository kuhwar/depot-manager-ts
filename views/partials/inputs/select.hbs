<div class="relative w-full flex items-center justify-center">
  <label class="absolute -top-3 left-2 p-1 bg-gray-100 dark:bg-gray-900 rounded-sm text-xs " for="select{{name}}">{{label}}:</label>
  <select id="select{{name}}" name="{{name}}" {{#if required}}required{{/if}}
          class="w-full h-full p-2 text-gray-700 bg-white border rounded-md dark:bg-gray-900 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 dark:focus:border-blue-300 focus:ring-blue-300 focus:ring-opacity-40 focus:outline-none focus:ring invalid:border-red-500">
    <option value="">Please select a {{label}}</option>
    {{# each options}}
      <option {{#if this.selected}}selected{{/if}} {{#if this.title}}title="{{this.title}}" {{/if}}value="{{this.id}}">{{this.name}}</option>
    {{/each}}
  </select>
</div>